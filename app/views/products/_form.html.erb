s<div class="container-fluid">
  <div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6"> 
        <div class="well show_well">
          <h1><%= heading %></h1>
          <%= render "error" %>
            <%= form_tag url, method: form_method do %>
              <form class="form-horizontal">
                <div class="form-group">
                  <label class="control-label col-md-2" for="name">Name:</label>  
                  <div class="col-md-10">
                    <input type="text" name="name" placeholder="Name" value="<%= @product.name %>">
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-2" for="price">Price:</label>
                  <div class="col-md-10">
                    <input type="text" name="price" placeholder="Price" value="<%= @product.price %>">
                  </div>
                </div>
                  <textarea name="description" placeholder="Description" rows=10><%= @product.description %></textarea>
                <div class="form-group">
                  <label class="control-label col-md-2" for="rating">Rating:</label>
                  <div class="col-md-10">
                    <input type="text" name="rating" placeholder="1-5" value="<%= @product.rating %>">
                  </div>
                </div>
                <div class="form-group">
                   
                  <div class="col-md-10">
                    <input type="text" name="quantity" placeholder="Quantity Available" value="<%= @product.quantity %>">
                  </div>
                </div>
                <div class="form-group">
                  <label class="control-label col-md-2" for="supplier">Supplier</label>
                  <div class="col-md-4">
                    <select name="supplier_id">
                      <% @suppliers.each do |supplier| %>
                        <option value="<%= supplier.id %>"><%= supplier.name %></option>
                      <% end %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-2" for="category_id">Category</label>
                    <div class="col-md-4">
                      <select name="category_id">
                        <% Category.all.each do |category| %>
                          <option value="<%= category.id %>"><%= category.name.capitalize %></option>
                        <% end %>
                      </select>
                    </div>
                  </div>
                </div>
                <input type="submit" value="<%= submit_message %>">
            </form>
              <% end %>
            <a href="/products"><button type="btn-primary" class="btn btn-primary">All products</button></a>
          </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>