<h1>All the available products!</h1>
<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <h2><%= product.name %></h2>
        <p>Price: $<%= product.price %></p>
        <p>Description: <%= product.description %></p>
        <p>Quantity Available: <%= product.quantity %></p>
      </div>
    <% end %>  
    </div>
  </div>
</div>