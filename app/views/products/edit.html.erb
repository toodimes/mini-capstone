<div class="container-fluid">
  <div class="row">
    <div class="col-md-3"></div> 
    <div class="col-md-6">       
      <h1>Use this page to edit a product</h1>
          <%= form_tag "/products/#{@product.id}", method: :patch do %>
            <form class="form-horizontal">
              <div class="form-group">
                <label class="control-label col-md-2" for="name">Name:</label>  
                <div class="col-md-10">
                  <input type="text" name="name" value="<%= @product.name %>">
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-2" for="price">Price:</label>
                <div class="col-md-10">
                  <input type="text" name="price" value="<%= @product.price %>">
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-2" for="image">Image Link:</label>
                <div class="col-md-10">
                  <input type="text" name="image" value="<%= @product.image %>">
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-2" for="description">Description:</label>
                <div class="col-md-10">
                  <input type="text" name="description" value="<%= @product.description %>">
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-2" for="quantity">Quantity:</label>
                <div class="col-md-10">
                  <input type="text" name="quantity" value="<%= @product.quantity %>">
                </div>
              </div>
              <input class="btn btn-primary" type="submit" value="Update Product">
          </form>
        <% end %>
      <%# form_tag "/products/#{@product.id}", method: :delete, data: { confirm: "Are you sure?"} do %>
        <!-- <input type="submit" value="Delete Product"> -->
      <%# end %>
        <%= button_to "Delete Product", "/products/#{@product.id}", method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>
        <a href="/products"><button type="btn-primary" class="btn btn-success" style="width: 100%">All products</button></a>
        <%# button_to "All Products", "/products" class: "btn btn-success" %>
      </div>
    <div class="col-md-3"></div>
  </div>
</div>