<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1>This is the showpage for: <%= @product.name %></h1>
      <p>It is described as: <%= @product.description %></p>
      <p>Currently it is selling for: <%= @product.price %></p>
      <p>Here is a picture of it:</p>
      <img src="<%= @product.image %>" alt="<%= @product.description %>">
      <br />
      <a href="/products"><button type="btn-primary" class="btn btn-primary">All products</button></a>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

