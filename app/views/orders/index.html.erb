<div class="container center-block">
  <h1>All your orders</h1>
  <!-- <div class="row"> -->
    <div class="profile" style="float: left; text-align: left;">
      <!-- <h2>Your Profile:</h2> -->
      <h2><%= current_user.name %></h2>
      <p><%= current_user.email %></p>
      <p>Member Since: <%= current_user.created_at.strftime("%b %d, %Y") %></p>
    </div>
  <!-- </div> -->
  <% if @orders.count > 3 %>
    <% @orders.each_slice(3) do |orders| %>
      <div class="row equal">
        <% orders.each do |order| %>
            <div class="col-md-4">
              <div class="well show_well">
                <h2>Order #<%= order.id %></h2>
                <p><%= order.product.name %></p>
                <p>Total: <%= number_to_currency(order.total) %></p>
                <% if order.product.images.any? %>
                  <img src="<%= order.product.images.first.url %>" alt="">
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    <% end %> 
  <% else %>
    <% @orders.each do |order| %>
      <div class="col-md-4">
        <div class="well show_well">
          <h2>Order #<% order.id %></h2>
          <p><%= order.product.name %></p>
          <p>Total: <%= number_to_currency(order.total) %></p>
          <% if order.product.images.any? %>
            <img src="<%= order.product.images.first.url %>" alt="">
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
    </div>
  </div> 
</div>