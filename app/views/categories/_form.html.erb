<div class="container-fluid">
  <div class="row">
    <div class="col-md-3"></div>
      <div class="col-md-6"> 
        <div class="well show_well">
          <h1><%= heading %></h1>
          <%= render "error" %>
            <%= form_tag url, method: form_method do %>
              <form class="form-horizontal">
                <div class="form-group">
                  <label class="control-label col-md-2" for="name">Name:</label>  
                  <div class="col-md-10">
                    <input type="text" name="name" placeholder="Name" value="<%= @category.name %>">
                  </div>
                </div>
                <input type="submit" value="<%= submit_message %>">
            </form>
              <% end %>
            <a href="/products"><button type="btn-primary" class="btn btn-primary">All products</button></a>
          </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>